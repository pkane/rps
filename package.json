{
  "name": "rock-paper-scissors",
  "version": "1.0.0",
  "description": "Rock Paper Scissors Game built with React",
  "main": "app.js",
  "scripts": {
    "serve": "webpack-dev-server --compress",
    "build-css": "node-sass --include-path scss app/scss/main.scss public/styles.css",
    "dev": "webpack && npm run build-css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "watch": "nodemon -e scss,js -x \"npm run build-css && webpack\""
  },
  "author": "Paul Kane",
  "dependencies": {
    "bootstrap": "^3.3.6",
    "lodash": "^3.10.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "moment": "^2.10.6"
  },
  "devDependencies": {
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "css-loader": "^0.23.0",
    "extract-text-webpack-plugin": "^0.9.1",
    "file-loader": "^0.8.5",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  }
}
